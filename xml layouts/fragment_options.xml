<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsFragment">

    <Button
        android:id="@+id/searchByLocationButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#7C0909"
        android:drawableStart="@drawable/gps_icon_large"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/searchByLocationButtonText"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/searchByCircleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchByCircleButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#152577"
        android:drawableStart="@drawable/search_icon_large"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/searchByCircleButtonText"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchByLocationButton" />
</androidx.constraintlayout.widget.ConstraintLayout>